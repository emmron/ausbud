    "zustand": "4.4.7",
    "postcss": "8.4.32",
    "postcss-cli": "10.1.0",
    "postcss-import": "15.1.0",
    "postcss-preset-env": "7.8.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20231218.0",
    "@remix-run/dev": "2.3.1", 
    "@types/react": "18.2.45",
    "@types/react-dom": "18.2.18",
    "concurrently": "8.2.2",
    "tailwindcss": "3.3.6",
    "typescript": "5.3.3",
    "wrangler": "3.21.0"
  }
