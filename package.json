{
  "name": "ausbud",
  "version": "1.0.0",
  "description": "Medical cannabis product finder",
  "homepage": "https://emmron.github.io/ausbud",
  "type": "module",
  "scripts": {
    "build": "remix build --sourcemap && mkdir -p build/client && cp -r public/* build/client/",
    "copy-files": "cp build/index.html build/404.html && cp build/index.html build/client/index.html && cp build/404.html build/client/404.html",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build/client",
    "dev": "remix dev",
    "start": "remix-serve build/server/index.js",
    "typecheck": "tsc",
    "css:build": "postcss styles --base styles --dir app/styles --env production",
    "css:dev": "postcss styles --base styles --dir app/styles -w",
    "update": "npm outdated && npm update"
  },
  "dependencies": {
    "@remix-run/cloudflare-pages": "2.3.1",
    "@remix-run/react": "2.3.1",
    "isbot": "4.1.0",
    "postcss": "8.4.32",
    "postcss-cli": "10.1.0",
    "postcss-import": "15.1.0",
    "postcss-preset-env": "7.8.3",
    "preact": "^10.19.3",
    "preact-router": "^4.1.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "^7.0.2",
    "zustand": "4.4.7"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20231218.0",
    "@remix-run/dev": "2.3.1",
    "@types/react": "18.2.45",
    "@types/react-dom": "18.2.18",
    "concurrently": "8.2.2",
    "gh-pages": "^6.2.0",
    "tailwindcss": "3.3.6",
    "typescript": "5.3.3",
    "wrangler": "3.21.0"
  }
}
