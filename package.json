{
  "name": "ausbud",
  "version": "1.0.0",
  "description": "Medical cannabis product finder",
  "homepage": "https://<username>.github.io/<repository-name>",
  "type": "module",
  "scripts": {
    "build": "remix build",
    "dev": "remix dev",
