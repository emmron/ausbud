{
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx", "**/*.css", "src/style.css"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "target": "ES2022",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "@style.css": ["./src/style.css"]
    },
    "noEmit": true,
    "module": "ESNext",
    "skipLibCheck": true,
    "types": ["@remix-run/node", "node", "tailwindcss"]
  }
}