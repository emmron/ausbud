{
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx", "**/*.css", "src/style.css"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx", 
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2022",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "@style.css": ["./src/style.css"]
    },
    "noEmit": true,
    "module": "ES2015",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "types": ["tailwindcss"]
  }
}